{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "isolatedModules": false,
    "experimentalDecorators": false,
    "removeComments": true,
    "noEmit": false,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@content/*": ["src/content*"],
      "@styles/*": ["src/styles/*"],
      "@pages/*": ["src/pages/*"],
      "@helpers/*": ["src/helpers/*"],
      "@hooks/*": ["src/hooks/*"],
      "@data/*": ["src/data/*"],
      "@config/*": ["src/config/*"],
    },
    "checkJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist"
  },
  "compileOnSave": true
}